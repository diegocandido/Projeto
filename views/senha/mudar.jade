extends ../layout

block content	
	div(class="col-lg-6")
		form(method="POST", action="/senha/mudar/#{dados._id}", class="form-login")
			h3 Atualizar Senha
			p Preencha os campos necess√°rios para acessar.
			if messages.erro
				br
				div(class="alert alert-danger")
					each msg in messages.erro
						b= msg
						br
			div(class="form-group")
				label Nova Senha
				input(type="password", class="form-control", placeholder="Senha", name="senha", required)
			button(type="submit", class="btn btn-primary") Atualizar
	div(class="col-lg-1")
	div(class="col-lg-5")
		img(src='../../images/esp.jpg', class="img-circle img-responsive")
