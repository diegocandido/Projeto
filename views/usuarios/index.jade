extends ../layout

block content
	br
	div(class="col-lg-12")
		a.btn.btn-info(href='/dashboard', role='button') Home
		&nbsp; &nbsp;
		a.btn.btn-primary(href='/usuarios', role='button') Usuários
		&nbsp; &nbsp;
		a.btn.btn-default(href='/entidades', role='button') Entidades
		&nbsp; &nbsp;
		a.btn.btn-default(href='/doacoes', role='button') Doações
		&nbsp; &nbsp;
		a.btn.btn-default(href='/doacoes', role='button') Confirmar
		&nbsp; &nbsp;
		a.btn.btn-default(href='/doacoes', role='button') Enviadas
		&nbsp; &nbsp;
		a.btn.btn-default(href='/configurar', role='button') Configurar
		&nbsp; &nbsp;
	br
	br
	h1 Lista de Usuários
	br
	br
	if messages.erro
		div(class="alert alert-danger")
			p #{messages.erro}
		br
	if messages.info
		div(class="alert alert-success")
			p #{messages.info}
		br
	if lista.length > 0
		table(class="table table-striped")
			thead
				tr
					th Data:
					th Nome:
					th CPF:
					th Valor Confirmado
					th Ações:
					th 
			tbody
				each valor in lista
					tr
						td #{moment(valor.data_cad).format('DD/MM/YYYY HH:MM:ss')}
						td #{valor.nome}
						td #{valor.cpf}
						td R$ #{valor.valortotal}
						td
							a(href="/usuarios/show/#{valor._id}", class="btn btn-info")
								span(class="glyphicon glyphicon-search")
							span &nbsp;
							a(href="/usuarios/edit/#{valor._id}", class="btn btn-primary")
								span(class="glyphicon glyphicon-pencil")
						td
							form(method="POST",action="/usuarios/delete/#{valor._id}", role="form", id="excluir-form")
								button(type="submit", class="btn btn-danger")
									span(class="glyphicon glyphicon-trash")
	else
		p Nenhum registro encontrado!
block scripts
	script(type="text/javascript").
		$(function(){
			$('#excluir-form').submit(function(){
				var pergunta = confirm('Deseja realmente excluir?');
				if(!pergunta){
					return false;
				}
			});
		});
