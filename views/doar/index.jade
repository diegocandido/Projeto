extends ../layout

block content
	h1 Doações
	br
	a.btn.btn-primary(href='/usuarios/edit/#{session._id}', role='button') Alterar seu cadastro
	br
	if listar.length > 0
		p Doações já realizadas
			table(class="table table-striped")
				thead
					tr
						th Entidade:
						th Data da doação
						th Status
						th Valor:
				tbody
					each valor in listar
						tr
							td 
								p #{valor.beneficiaria}
							td
								p #{moment(valor.data).format('DD/MM/YYYY HH:MM:ss')}
							td
								p #{valor.status}
							td
								p R$ #{valor.valordoado}
		br
		br
		h2 1 PASSO: Realizar nova doação
		div(class="row")
			div(class="col-lg-4")
				img(src='../../img/logo-apae.jpg', class="img-rounded img-responsive")
				h2 APAE
					p(class="lead")
					p
						a.btn.btn-primary(href='../valor/57c78803cd56860300830911', role='button') Doar para a entidade
			div(class="col-lg-4")
				img(src='../../img/logo-larpadilha.jpg', class="img-rounded img-responsive")
				h2 Lar Padilha
					p(class="lead")
					p
						a.btn.btn-primary(href='../valor/57cafb0d55ee4a2c0346774a', role='button') Doar para a entidade		
			div(class="col-lg-4")
	else
		h2 1 PASSO: Escolha uma entidade
		div(class="row")
			div(class="col-lg-4")
				img(src='../../img/logo-apae.jpg', class="img-rounded img-responsive")
				h2 APAE
					p(class="lead")
					p
						a.btn.btn-primary(href='../valor/57c78803cd56860300830911', role='button') Doar para a entidade
			div(class="col-lg-4")
				img(src='../../img/logo-larpadilha.jpg', class="img-rounded img-responsive")
				h2 Lar Padilha
					p(class="lead")
					p
						a.btn.btn-primary(href='../valor/57cafb0d55ee4a2c0346774a', role='button') Doar para a entidade		
			div(class="col-lg-4")

		
		
