extends ../layout

block content
	br
	div(class="col-lg-12")
		a.btn.btn-info(href='/dashboard', role='button') Home
		&nbsp; &nbsp;
		a.btn.btn-default(href='/usuarios', role='button') Usuários
		&nbsp; &nbsp;
		a.btn.btn-default(href='/entidades', role='button') Entidades
		&nbsp; &nbsp;
		a.btn.btn-primary(href='/doacoes', role='button') Doações
		&nbsp; &nbsp;
		a.btn.btn-default(href='/doacoes', role='button') Confirmar
		&nbsp; &nbsp;
		a.btn.btn-default(href='/doacoes', role='button') Enviadas
		&nbsp; &nbsp;
		a.btn.btn-default(href='/configurar', role='button') Configurar
		&nbsp; &nbsp;	
	br
	br
	h1 Lista de Doacões
	br
	if messages.erro
		div(class="alert alert-danger")
			p #{messages.erro}
		br
	if messages.info
		div(class="alert alert-success")
			p #{messages.info}
		br
	if lista.length > 0
		table(class="table table-striped")
			thead
				tr
					th Status:
					th Data:
					th Valor:
					th Identificador:
					th Confirmar:
					th 
			tbody
				each valor in lista
					tr
						td #{valor.status}
						td #{moment(valor.data_cad).format('DD/MM/YYYY HH:MM:ss')}
						td R$ #{valor.valordoado}
							input(type="hidden", name="valor", value="#{valor.valordoado}")
						td 
						td
							a(href="javascript: Atualizar('#{valor._id}', '#{session._id}', '#{valor.valordoado}');", class="btn btn-success")
								span(class="glyphicon glyphicon-ok")
	else
		p Nenhum registro encontrado!

block scripts
	script(type="text/javascript").
		function Atualizar(doacao, usuario, valor){
			var pergunta = confirm('Confirma o recebimento do valor?');
			if(pergunta){
				$.ajax({
					url: '/doacoes/confirmar/'+doacao+'/'+usuario+'/'+valor,
					dataType: 'json',
					type: 'POST',
					statusCode: {
						200: function(data){
							alert(data);
							window.location.reload();
						},
						400: function(data){
							alert(data);
						}
					}
				});
			}
		}
