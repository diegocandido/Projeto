extends ../layout

block content
	div(class="jumbotron")
			h1 #{dados.nomedaentidade}
			hr
			div(class="col-lg-8")
				img(src='../img/#{dados.img}', class="img-rounded img-responsive")
				br
				p #{dados.texto}
				br
				br
			div(class="col-lg-3")
				img(src='../img/#{dados.logo}', class="img-rounded img-responsive")
				br
				a(href="../login" class="btn btn-lg btn-success") Fazer doação
				br
				br
				h4 Dados da entidade
				h5 Contato: #{dados.telefone}
				h5 E-mail: 
				| #{dados.email}
				h5 Site: 
				| #{dados.site}
				h5 Cidade: #{dados.cidade}
				h5 Estado: #{dados.estado}
	div(class="jumbotron")
